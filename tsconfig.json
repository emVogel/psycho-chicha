{
  "compilerOptions": {
    "jsx": "react",

    "module": "commonjs",

    "noImplicitAny": true,

    "esModuleInterop": true,

    "outDir": "./dist/",

    "preserveConstEnums": true,

    "removeComments": true,

    "sourceMap": true,

    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"]
  },

  "include": ["src", "index.tsx", "webpack.config.js"],
  "exclude": ["node-modules", "dist", "**.js"]
}
